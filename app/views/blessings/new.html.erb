<h1>30 days of gratitude</h1>

<div class="main">
  
<%= render 'form' %>

 
<div class="gratitudes">
  <ol id="gratitude">
    
<% counter = 0 %>
<%   days = 0 %>

<% @blessings.each do |blessing| %>

  <% counter += 1 %>
  <% days += 1 %>

  <li><%= blessing.answer %></li>

  <% if counter == 3 %>
  </ol>
  <div class="days" id="days">
    <div class="day_counter">Day <%=days/3 %></div>
  <div class="line"></div>
  </div>
  <ol id="gratitude">
    <% counter = 0 %>
    <% end %>
